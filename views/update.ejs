<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/adminhome.css">
</head>
<body>

    <nav>
        <label class="logo">Admin Page</label>
    </nav>

    <div class="container">
        <div class="row mt-4">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h5 class="text-light">Update User</h5>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update" method="post" id="add-form" >
                            <div class="mb-3">
                                <% user.forEach(collection=> { %>
                                    <label for="name">Name</label>
                                    <input value="<%= collection.name %>" name="name" type="text" class="form-control form-control-lg" placeholder="Enter Name"/>
                                    <input value="<%= collection._id %>" name="id" type="hidden" class="form-control form-control-lg"/>
                                    
                                </div>
                                <div class="mb-3">
                                    <label for="email">Email</label>
                                    <input value="<%= collection.email %>" name="email" type="email" class="form-control form-control-lg" placeholder="Enter Email"/>
                                </div>
                                <% }); %>                            
                            <div class="mb-3 mt-5">                                
                                <div style="position: absolute; margin-left: 5%;"><input type="submit" name="submit" value="Update User" class="btn btn-primary btn-lg" /></div>
                                <div style="position: relative; margin-left: 70%;"><a href="/admin/adminhome"><input value="Back" class="btn btn-primary btn-lg"type="button"/></a></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>